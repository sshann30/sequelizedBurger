<h1>Order a Burger and devour it</h1>


<ul>
  {{#each burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Burger Name:: {{this.burger_name}}</p>
  	</li>
  {{/each}}
</ul>


{{!-- functionality to make this devoured --}}
<div id="devoured"  class="col-md-offset-1 col-md-4">
    {{#each burger}}
      {{#if this.devoured}}
  
          <div  class="burger-div">
            {{this.id}}. {{this.burger_name}}
          </div>

      {{/if}}
    {{/each}}
  </div>
</div>

<form action="/" method="POST">
	<textarea type="text" name="BurgerName"></textarea>

	<button type="submit">Submit</button>
</form>

